dimension 	3
units		lj
boundary 	p p p

atom_style	atomic		# Used for to simulate particles that has only mass as its attribute

########## System setup ##########
variable 	xlo equal 0.0
variable 	xhi equal 10.0
variable 	ylo equal 0.0
variable 	yhi equal 10.0
variable 	zlo equal 0.0
variable 	zhi equal 10.0

region          myregion block ${xlo} ${xhi} ${ylo} ${yhi} ${zlo} ${zhi} units box

create_box      1 myregion

create_atoms	1 random 800 87183 myregion # Creates particles with a density of 0.8 

mass		1 1.0
write_data	atomic.lmpsys

########## Interaction Potentials ##########
pair_style 	lj/cut 2.5
pair_coeff 	1 1 1.0 1.0 
pair_modify	shift yes

##########  Neighbor List and Timestep  ##########
timestep        0.005
neighbor        1.0 bin
neigh_modify    every 1 delay 0 check yes

########## Log output ##########
thermo_style 	custom step temp density ke pe etotal 
thermo 		100
log 		log.dat

########## System minimization ##########
velocity 	all create 0.8 123456 dist gaussian

minimize	1.0e-4 1.0e-4 100000 100000
reset_timestep	0

########## Thermostat-setup (Nos`e-Hoover thermostat) ##########
fix		fxnvt all nvt temp 0.8 0.8 $(100.0*dt)

run 		10000
reset_timestep 	0
########## Output Run and computing RDF ##########

compute 	computeRdf all rdf 200  
fix 		fixRdf all ave/time 1 10000 10000 c_computeRdf[*] file rdf.dat mode vector # RDF values averaged over 10000 timesteps will be saved

dump 		dumpall all dcd 100 atomic.dcd
run 		10000
