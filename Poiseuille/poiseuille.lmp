dimension 	3
boundary	p p f
units		lj

atom_style	atomic

########## System setup  ##########
variable 	xsim equal 10.0
variable 	ysim equal 10.0
variable	Lz equal 1.25
variable 	zsim equal 5
variable 	z_buffer equal 1.0

lattice  	fcc 1.0			
region 		myregion block 0 ${xsim} 0 ${ysim} 0 ${zsim} units lattice		# Defining region for the entire simulation box
create_box	3 myregion			# Creating the simulation box

create_atoms 	1 region myregion 			# Creating bottom wall with a fcc lattice density of 1.0

#region		flow block  INF INF INF INF -${Lz} ${Lz} units lattice		# Defining region for the fluid particles 
region		wall1 block INF INF INF INF INF 0.5 units lattice	# Defining region for the bottom wall particles
group 		bot region wall1
region		wall2 block INF INF INF INF 4.0 INF units lattice		# Defining region for the top wall particles
group		top region wall2

group 		walls union bot top
group 		fluid subtract all walls

#group 		fluid region flow

set 		group fluid type 1
set 		group bot type 2
set 		group top type 3
#create_atoms	1 random 1000 87183 fluid	# Creating fluid particles with a density of 0.5


#create_atoms 	2 region wall1			# Creating bottom wall with a fcc lattice density of 1.0
#create_atoms 	3 region wall2			# Creating top wall with a fcc lattice density of 1.0

mass 		1 1.0
mass 		2 1.0
mass 		3 1.0

write_data 	poiseuille.lmpsys

########## Defining groups ##########
group 		system type 1 2 3  

#group           fluid type 1 

#group           bot type 2  
#group           top type 3 
group		wall type 2 3 

########## Interaction potentials ##########
pair_style 	lj/cut 2.5

pair_coeff      1 1 1.0 1.0
pair_coeff      1 2* 1.0 1.0
pair_coeff      2* 2* 0.0 0.0

## OR ##
#pair_coeff 	* * 1.0 1.0 

##########  Timestep & minimization  ##########
timestep        0.001
neighbor        1.0 bin
neigh_modify    every 1 delay 0 check yes
neigh_modify    exclude group wall wall			 

velocity        fluid create 1.0 123456

fix             fxwall wall setforce 0.0 0.0 0.0	# To keep the walls rigid
#minimize        1.0e-6 1.0e-6 1000000 1000000
reset_timestep  0

##########  Thermostating the fluid using Nos'e-Hoover thermostat ##########
fix             fxnvt_fluid fluid nvt temp 1.0 1.0 $(100.0*dt)

compute         wall_temp wall temp
compute         fluid_temp fluid temp

thermo          10
thermo_style    custom step temp c_wall_temp c_fluid_temp ke pe etotal 

dump            dmpall  all dcd 50 dump.dcd
dump_modify     dmpall unwrap yes

compute         cChunk fluid chunk/atom bin/1d z 0.0 0.1 units box bound z 0 16.0       
fix             fx_vel1 fluid ave/chunk 1 10000 10000 cChunk vx vy vz file ./vel_before.dat

run             10000
unfix 		fx_vel1

########## Application of external field ##########
fix             fxacc fluid gravity 0.075 vector 1 0 0		# Applying an external acceleration of 0.075 to all fluid particles in the x-direction

run		10000
reset_timestep  0

########## Output run ##########
fix             fx_vel2 fluid ave/chunk 1 10000 10000 cChunk vx vy vz file ./vel_after.dat	# Saves the velocity profile averaged over 10000 timesteps
fix             fx_den fluid ave/chunk 1 10000 10000 cChunk density/mass file ./den.dat		# Saves the density profile averaged over 10000 timesteps

run             10000
